@model IEnumerable<ClosedBurger.Client.Models.About>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>
<div class="content-body">
    <!-- row -->
    <div class="container-fluid">
<p>
            <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Explanation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Explanation)
            </td>
            <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-dark">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div></div>