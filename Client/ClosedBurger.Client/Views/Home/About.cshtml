@using ClosedBurger.Client.Models
@model List<About>
@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content-section">
    <div class="overlay-bg"></div>
    <div class="container">
        <div class="col-md-12">
            <div class="content-page-layout">
                <div class="about-page">
                    <div class="about-us-thumbnail" style="background: url('/menuFoto/flame.png') center center no-repeat; background-size:auto;">
                        <h2></h2>
                    </div>
                    <div class="about-us-text">
                        @foreach (var item in Model)
                        {
                        <h2 class="about-title">@item.Title</h2>
                            
                        }
                        <br>
                        <br>
                        @foreach (var item in Model)
                        {
                            @Html.Raw(item.Explanation)
                        }
                    </div>




                </div>
            </div>
        </div>
    </div>
</div>

